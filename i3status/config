
general {
    colors = true
    interval = 1
}

order += "battery all"
order += "tztime utc"
order += "tztime local"

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
    format = "%Y-%m-%d %a %r"
}

tztime utc {
    format = "%H:%M:%S UTC"
    timezone = "Etc/UTC"
}

