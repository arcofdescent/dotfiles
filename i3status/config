
general {
    colors = true
    interval = 1
}

battery all {
        format = "%status %percentage %remaining"
}

tztime local {
    format = "%Y-%m-%d %a %r"
}

tztime utc {
    format = "%H:%M UTC"
    timezone = "Etc/UTC"
}

tztime cet {
    format = "%H:%M CET"
    timezone = "CET"
}

tztime ast {
    format = "%H:%M AST"
    timezone = "America/Curacao"
}

order += "battery all"
order += "tztime ast"
order += "tztime utc"
order += "tztime cet"
order += "tztime local"

