# --- Appearance & Fonts ---
theme = Catppuccin Mocha
font-family = "JetBrains Mono"
font-size = 14

# Adjust cursor to be a block that stops blinking
cursor-style = block
cursor-style-blink = true

# --- Cross-Platform Titlebar Hiding ---
# macOS: Hides the bar but keeps the "traffic lights" if you hover (or use 'hidden' to remove fully)
#macos-titlebar-style = tabs
# Linux: Disables server-side window decorations
#window-decoration = false
# Linux (GNOME specific): Ensures the header bar is gone
#gtk-titlebar = false

# --- Window Behavior ---
window-padding-x = 4
window-padding-y = 4
# Start new windows/tabs in the same directory as the current one
#working-directory = inherit

